{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.Extensions.Http": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "CuriousTraveler.Api.Services": "Debug",
      "CuriousTraveler.Api.Controllers": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ALLOWED_ORIGINS": "http://localhost:3000,https://localhost:3001",
  
  "Itineraries": {
    "MaxPois": 5,
    "UseIsochroneIfAvailable": true,
    "StrictOpeningHours": true,
    "DefaultRadiusKm": {
      "walking": 2.5,
      "car": 8.0,
      "public_transport": 3.5
    },
    "AvgSpeedsKmh": {
      "walking": 4.5,
      "car": 30.0,
      "public_transport": 5.0
    },
    "ProcessingRetryAfterSeconds": 3,
    "JobTtlHours": 24,
    "CategoryMappings": [
      {
        "id": "category:museum",
        "labels": ["museum", "art museum", "gallery"],
        "azureMapsCategory": "7317"
      },
      {
        "id": "category:landmark",
        "labels": ["landmark", "monument", "historic"],
        "azureMapsCategory": "9361"
      },
      {
        "id": "category:park",
        "labels": ["park", "garden", "green space"],
        "azureMapsCategory": "9362"
      },
      {
        "id": "category:food",
        "labels": ["food", "restaurant", "street food", "eat"],
        "azureMapsCategory": "7315"
      },
      {
        "id": "category:cafe",
        "labels": ["cafe", "coffee", "coffee shop"],
        "azureMapsCategory": "9376"
      },
      {
        "id": "category:market",
        "labels": ["market", "bazaar", "farmers market"],
        "azureMapsCategory": "7332"
      },
      {
        "id": "category:church",
        "labels": ["church", "cathedral", "temple"],
        "azureMapsCategory": "7302"
      }
    ]
  },
  
  "AzureMaps": {
    "AuthMode": "KEY",
    "AccountName": "",
    "TransitEnabledHint": true
  },
  
  "AzureOpenAI": {
    "Endpoint": "",
    "Gpt5MiniDeployment": "gpt-5-mini",
    "Gpt5ChatDeployment": "gpt-5-chat",
    "TimeoutSeconds": 30,
    "MaxRetries": 1
  },
  
  "Storage": {
    "ConnectionString": "",
    "QueueName": "itinerary-jobs",
    "JobsTable": "ItineraryJobs"
  },
  
  "RateLimiting": {
    "PostPerMinute": 20,
    "GetPerMinute": 60
  }
}